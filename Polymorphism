//InstanceOF
public void showAllItemData(){
   if (items.size() == 0){
       System.out.println("No Data");
   }
   else {
       for (Item a : items){
           if (a instanceof Shirt){
               System.out.println(a.toString());
           }
       }
       for (Item a : items){
           if (a instanceof Shoe){
               System.out.println(a.toString());
           }
       }
   }
}
//OBJECT CASTING
for (Item a : arr){
   if (a instanceof Shoe){
       System.out.println(a.toString());
       System.out.println(((Shoe) a).getColor());
   }
}





