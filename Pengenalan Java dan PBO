//Pengenalan deklarasi class dan method
public class WordReverserDemo {
   public static void main(String[] args) {

       Scanner scanner = new Scanner(System.in);
       System.out.print("Input kalimat (0 untuk keluar) : ");
       String kalimat = scanner.nextLine();
       do {
           WordReverser balik = new WordReverser();
           System.out.print("Hasil pembalikan: ");
           String hasil = balik.reverseWord(kalimat);
           System.out.println(hasil);
           System.out.print("Input kalimat (0 untuk keluar) : ");
           kalimat = scanner.nextLine();
       } while (!kalimat.equals("0"));
   }
}

//Basic Rules

public class Kotak {
   private int x;
   private int y;
   private int panjang;
   private int lebar;

   public void atas(int y) {this.y += 1;}
   public void bawah(int y) {this.y -= 1;}
   public void kanan(int x) {this.x += 1;}
   public void kiri(int x) {this.x -= 1;}
}


//NAMING RULES

public class WordReverser {
   public static String reverseWord(String kata){
       StringBuffer rev = new StringBuffer(kata);
       rev.reverse();
       return rev.toString();
   }

}

//PSEUDOCODE
//            IF pilihan == 1
//                hasil == convertToBinary(number)
//            ELSE IF pilihan == 2
//                hasil == convertToOctal(number)
//            ELSE IF pilihan == 3
//                hasil == convertToHex(number)

if (pil == 1) {
   hasil = conv.convertToBinary(num);
} else if (pil == 2) {
   hasil = conv.convertToOctal(num);
} else if (pil == 3) {
   hasil = conv.convertToHex(num);
}

//Eksekusi Java Statement
System.out.println("1. Decimal to Binary");
System.out.println("2. Decimal to Octal");
System.out.println("3. Decimal to Hex");
System.out.println("4. Exit")


